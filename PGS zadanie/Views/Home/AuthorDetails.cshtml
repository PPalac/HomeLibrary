@model PGS_zadanie.Models.Author


<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">


    <div class="info" style="font-size:x-large">Nazwisko: <b style="color:burlywood">@Model.Surname</b></div>
    <p> </p>
    <div class="info" style="font-size:x-large">Imię: <b style="color:burlywood">@Model.Name</b></div>
    <p> </p>
    <div class="info" style="font-size:x-large">Książki w bibliotece:</div>
    <p> </p>
    <ul  style="font-size:x-large">
        @foreach(var element in Model.Books)
        {
            <li><b style="color:burlywood">@element.Title</b></li>
        }
    </ul>



</div>